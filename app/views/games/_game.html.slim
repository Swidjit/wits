	.col-100.marginless.blue-green
		h3 current games
		-game.game_boards.active.limit(2).each do |g|
			=render :partial => 'game_boards/basic_layout', :locals => {board: g}
		.clear style="height:15px;"
		h3 recent results
		-game.game_boards.expired.limit(2).order("end_date desc").each do |g|
			=render :partial => 'game_boards/basic_layout', :locals => {board: g}	
		.clear style="height:15px;"