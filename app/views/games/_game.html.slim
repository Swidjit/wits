div id="game-#{game.id}" class="game"
	.green
		.game-feed-logo
			=image_tag('profile.svg',:size=>'100x120')
		.game-frame
	
			=link_to game_path(game) do
				.game-feed-header
					.game-title
						=game.title
					.game-description.subtle
						=game.description
					.game-link
						button game overview
						.clear
						| top players, best entries & game archives				
			.clear
			
			
	
			.game-instructions.more
