:javascript
  $('#message').on('click', function() {
    $('#user-id').val('#{@user.id}');
    $('#message-user').foundation('reveal','open');
  });

  $('.more').on('click', function() {
    $(this).next('.extra').toggle();
    console.log($(this));
    $(this).toggle();
  });
  $('.less').on('click', function() {
    $(this).closest('.extra').toggle();
    $(this).parent().parent().find('.more').toggle();
  });
